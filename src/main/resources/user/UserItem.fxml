<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="949.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.esprit.controllers.user.UserItem">
   <children>
      <ImageView fx:id="img" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/man.png" />
         </image>
         <HBox.margin>
            <Insets left="5.0" />
         </HBox.margin>
      </ImageView>
      <Label fx:id="name" prefWidth="170.0" text="Flen Beb Foulen" textFill="#575757">
         <font>
            <Font name="Corbel" size="20.0" />
         </font>
      </Label>
      <Label fx:id="phone" prefWidth="175.0" text="+216 xx-xxx-xxx" textFill="#575757">
         <font>
            <Font name="Corbel" size="20.0" />
         </font>
      </Label>
      <Label fx:id="email" prefWidth="300.0" text="flen.ben.foulen@gmail.com" textFill="#575757">
         <font>
            <Font name="Corbel" size="20.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label fx:id="type" prefWidth="170.0" text="Citoyen" textFill="#575757">
               <font>
                  <Font name="Corbel" size="20.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#editUser" prefHeight="40.0" prefWidth="40.0" styleClass="icon-button" stylesheets="@../css/style.css">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/document-editor.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button layoutX="164.0" layoutY="25.0" mnemonicParsing="false" onAction="#deleteUser" prefHeight="40.0" prefWidth="40.0" styleClass="icon-button" stylesheets="@../css/style.css">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/delete.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets left="5.0" />
   </padding>
</HBox>
